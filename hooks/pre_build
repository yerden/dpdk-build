#!/bin/bash

WD=$(dirname $0)

# parse DOCKER_TAG
DIST=$(echo $DOCKER_TAG | awk \
	'BEGIN{FS=OFS="-"}{NF=(NF>1?NF-1:NF); print}')
DPDK_VER="$(echo $DOCKER_TAG | awk \
	'BEGIN{FS=OFS="-"}{print $NF=="latest"?"master":$NF}')"

# default OS image
case $DIST in
	centos*)
		BASE=centos
		;;
	stretch*)
		BASE=debian
		;;
	*)
		BASE=ubuntu
		;;
esac

echo "Building from $DIST, DPDK version: $DPDK_VER"
echo "tag: $DOCKER_TAG"
echo "image_name: $IMAGE_NAME"
echo "dockerfile: $DOCKERFILE_PATH"
echo "pwd: $PWD"

# build dpdk on base:dist
(docker run \
	-e DOCKER_UID=$UID \
	-e BASE=$BASE \
	-e DIST=$DIST \
	-e DPDK_VER=$DPDK_VER \
	-v $PWD/:/workdir \
	-w /workdir \
	--rm \
	${BASE}:${DIST} \
	/bin/bash -c "env && ./scripts/pre-build.${BASE}.sh && ./scripts/build.dpdk.sh ./build/dpdk.tar.gz"
) || exit 1

cat > build/Dockerfile <<EOF
FROM ${BASE}:${DIST}
LABEL org.opencontainers.image.authors="yerden.zhumabekov@gmail.com"
LABEL org.opencontainers.image.created="$(date --rfc-3339='seconds')"
ADD build/dpdk.tar.gz /
RUN ldconfig
EOF

# set default build variables

## get extension of Dockerfile
# DOCKERFILENAME=$(basename -- $DOCKERFILE_PATH)
# EXT="${DOCKERFILENAME##*.}"
